{% block additional_headers %}
{% endblock %}
{% block body %}
{% include "song_navigation.jinja2" %}
{% if song.get("pages"): %}
{% for page in song.get("pages"): %}
<div
   id='page{{page.get("page_number")}}'
   class = 'songpage'
   data-songtitle = "{{song.get("name")}}"
>
{{page.get("lyrics_prepped")}}
</div>

{% endfor %}
{% else: %}
<h1>This song doesn't exist or has no pages.</h1>
{% endif %}

{% endblock %}
